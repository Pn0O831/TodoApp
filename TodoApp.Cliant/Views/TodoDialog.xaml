<Window x:Class="TodoApp.Client.Views.TodoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoApp.Client.Views"
        mc:Ignorable="d"
        Title="ToDo登録" Height="300" Width="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="タイトル *" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Margin="10,0,10,5"/>
        <TextBox Text="{Binding EditingItem.Title,Mode=TwoWay}" HorizontalAlignment="Stretch" Grid.Row="1" Grid.ColumnSpan="2" Margin="10,0,10,15"/>
        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Grid.Column="1" Grid.Row="0" Margin="150,0,10,5"/>

        <TextBlock Text="詳細説明" Grid.Row="2" Grid.ColumnSpan="2" Margin="10,0,10,5"/>
        <TextBox Text="{Binding EditingItem.Description, Mode=TwoWay}"
                 Grid.Row="3"
                 Grid.ColumnSpan="2"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Margin="10,0,10,10"/>

        <TextBlock Text="期限日" VerticalAlignment="Center" Grid.Row="4" Margin="10,0,10,0"/>
        <TextBlock Text="優先度" VerticalAlignment="Center" Grid.Row="4" Grid.Column="1" Margin="10,0,10,0"/>
        <DatePicker SelectedDate="{Binding EditingItem.DueDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                    Grid.Row="5" Width="120" Margin="0,0,10,20"/>
        <ComboBox SelectedValue="{Binding EditingItem.Priority, Mode=TwoWay}"
                  SelectedValuePath="Tag"
                  Grid.Row="5" Grid.Column="1" Width="80" Margin="0,0,210,20">
            <ComboBoxItem Content="高" Tag="1"/>
            <ComboBoxItem Content="中" Tag="2"/>
            <ComboBoxItem Content="低" Tag="3"/>
        </ComboBox>

        <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="1" Margin="10,0,0,20">
            
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,0,0,0">
            <Button Content="キャンセル" Width="80" Margin="0,0,10,0" Click="CanselButton_Click"/>
            <Button Content="保存" Width="80" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
